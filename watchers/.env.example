# AI Employee Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ===========================================
# Gmail API Credentials (for Gmail Watcher)
# ===========================================
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:8080

# ===========================================
# WhatsApp Session (for WhatsApp Watcher)
# ===========================================
# Path to store WhatsApp Web session data
WHATSAPP_SESSION_PATH=/path/to/whatsapp/session

# ===========================================
# Odoo ERP Credentials (for Gold/Platinum tier)
# ===========================================
ODOO_URL=https://your-odoo-instance.com
ODOO_API_KEY=your_api_key_here
ODOO_DATABASE=your_database_name

# ===========================================
# Bank API Credentials (for Finance Watcher)
# ===========================================
BANK_API_URL=https://api.yourbank.com
BANK_API_TOKEN=your_token_here

# ===========================================
# Development Settings
# ===========================================
# Set to 'true' to prevent real actions during development
DRY_RUN=true

# Maximum actions per hour (rate limiting)
MAX_EMAILS_PER_HOUR=10
MAX_PAYMENTS_PER_HOUR=3

# ===========================================
# Vault Configuration
# ===========================================
# Path to your Obsidian vault
VAULT_PATH=/path/to/AI_Employee_Vault

# Drop folder for file watcher
DROP_FOLDER=/path/to/AI_Employee_Vault/Inbox/Drop
